{
  "env": {
    "browser": true,
    "es6": true
    
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "no-undef": "off",
    "max-len": [
      "error",
      {
        "code": 130
      }
    ],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error" ,
      "single",  {  "avoidEscape" : false ,  "allowTemplateLiterals" : true  }
    ],
    "semi": [2, "always"]

  }
}
